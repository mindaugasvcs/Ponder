{% extends 'base.html.twig' %}

{% block body %}
    <h1>Poll</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ poll.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ poll.title }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if poll.createdAt %}{{ poll.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Hitscount</th>
                <td>{{ poll.hitsCount }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('poll_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('poll_edit', { 'id': poll.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
