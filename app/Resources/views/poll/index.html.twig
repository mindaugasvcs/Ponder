{% extends 'base.html.twig' %}

{% block body %}
    <h1>Polls list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Createdat</th>
                <th>Hitscount</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for poll in polls %}
            <tr>
                <td><a href="{{ path('poll_show', { 'id': poll.id }) }}">{{ poll.id }}</a></td>
                <td>{{ poll.title }}</td>
                <td>{% if poll.createdAt %}{{ poll.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ poll.hitsCount }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('poll_show', { 'id': poll.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('poll_edit', { 'id': poll.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('poll_new') }}">Create a new poll</a>
        </li>
    </ul>
{% endblock %}
